{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "types", "scripts", "example", "packages/www"],
  "exclude": ["**/dist"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@tldraw/tldraw": ["packages/tldraw/src"],
      "@tldraw/core": ["packages/core/src"],
      "@tldraw/www": ["packages/www/src"],
      "$test/*": ["test/*"]
    }
  }
}
