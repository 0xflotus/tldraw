{
  "name": "tldraw",
  "private": true,
  "author": "@steveruizok",
  "license": "MIT",
  "version": "0.0.25",
  "workspaces": [
    "packages/core",
    "packages/tldraw"
  ],
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --",
    "test:start": "lerna run test -- --watchAll",
    "lint": "lerna run lint -- --fix",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "start:app": "yarn run build && yarn --cwd www && yarn --cwd www start",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "changeset": "changeset",
    "release": "changeset publish",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "husky": "^7.0.1",
    "tsdx": "^0.14.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.0",
    "@changesets/cli": "^2.10.3",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "caniuse-lite": "^1.0.30001249",
    "cypress": "^5.2.0",
    "lerna": "^3.15.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}