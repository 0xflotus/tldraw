  "version": "0.0.25",
  "workspaces": [
    "packages/core",
    "packages/tldraw",
    "packages/www"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "lerna": "^3.15.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "esbuild": "^0.11.11"
  },
  "scripts": {
    "lerna": "lerna",
    "start": "lerna run build && lerna run dev --stream --parallel",
