{
  "extends": "../../tsconfig.base.json",
  "include": ["src", "../core/src/components/minimap"],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~*": ["./*"],
      "@tldraw/core": ["../core"],
      "@tldraw/vec": ["../vec"],
      "@tldraw/intersect": ["../intersect"]
    }
  },
  "references": [{ "path": "../vec" }, { "path": "../intersect" }, { "path": "../core" }],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
