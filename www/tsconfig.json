{
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "-*": ["./*"],
      "@tldraw/tldraw": ["../packages/tldraw"]
    },
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.json", "**/*.ts", "**/*.tsx", "tsconfig.scripts.json"],
  "exclude": ["node_modules"]
}
